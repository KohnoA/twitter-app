{
  "name": "twitter-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint --ext ts,tsx src --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --ext ts,tsx src --fix",
    "preview": "vite preview",
    "prepare": "husky install",
    "format": "prettier . --write",
    "test": "jest",
    "test:e2e": "start-server-and-test 'yarn dev' http://localhost:5173 'yarn cypress:run'",
    "cypress:run": "cypress run --e2e --browser chrome",
    "cypress:open": "cypress open --e2e --browser chrome"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "firebase": "^10.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.3",
    "redux-persist": "^6.0.0",
    "styled-components": "^6.1.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.4.5",
    "@swc/jest": "^0.2.36",
    "@swc/plugin-react-remove-properties": "^1.5.117",
    "@swc/plugin-styled-components": "^1.5.118",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cypress": "^13.6.6",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "jest-transformer-svg": "^2.0.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-svgr": "^4.2.0"
  }
